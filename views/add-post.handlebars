<article class='new-page'>
  <section class='new-form-page uk-container'>
    <div class='form-heading uk-margin'>
      <legend class='uk-legend uk-margin-top'>Create Your Post</legend>
    </div>
    <div class='form-section'>
      <form class='new-post-form uk-form-stacked'>
        <div class='post-title-section uk-margin'>
          <label
            for='post-title form-stacked-text'
            class='uk-form-label'
          >Title</label>
          <input
            class='uk-input'
            type='text'
            id='post-title'
            name='post-title'
          />
        </div>
        <div class='post-content uk-margin'>
          <label
            for='post-content form-stacked-text'
            class='uk-form-label'
          >Content</label>
          <textarea
            class='entry-field uk-textarea'
            id='post-text'
            name='post-text'
          ></textarea>
        </div>
        <button
          type='submit'
          class='btn uk-button uk-button-default'
        >Create</button>
        <a href='/group' class='go-back uk-button uk-button-primary'>
          <!--fix as well-->
          &larr; Back to Group</a>
      </form>
    </div>
  </section>
</article>

<script src='/js/add-post.js'></script>