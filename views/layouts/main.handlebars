<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>The Tech Blog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <body>
    <div class='wrapper'>
      <header>
        <nav class='uk-navbar-container uk-margin-bottom' uk-navbar>
          <div class='uk-navbar-left'>

            <ul class='uk-navbar-nav'>
              <a class='uk-navbar-item uk-logo uk-margin-left' href='/'>Tech
                Blog</a>
              <li class='uk-active'><a href='/'>Home</a></li>
              {{#if loggedIn}}
                <li class='uk-active'><a href='/dashboard'>Dashboard</a></li>
                <button
                  class='logout uk-button uk-button-link uk-button-large uk-margin-left'
                  href='/'
                  id='logout'
                >Logout</button>
              {{else}}
                <li class='uk-active'><a href='/login'>Login</a></li>
              {{/if}}
            </ul>
          </div>
        </nav>
      </header>

      <main>
        <div class='uk-container'>
          {{{body}}}
        </div>
      </main>
    </div>

    {{#if loggedIn}}
      <script src='/js/logout.js'></script>
    {{/if}}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>